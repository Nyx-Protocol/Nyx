# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Windows specific
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.wasm binary
*.so binary
*.dylib binary
*.dll binary

# Archive files
*.tar binary
*.gz binary
*.zip binary
*.7z binary

# Lockfiles (reduce merge conflicts)
Cargo.lock linguist-generated=true merge=union
package-lock.json linguist-generated=true merge=union
